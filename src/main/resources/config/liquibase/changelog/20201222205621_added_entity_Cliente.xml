    <!--
        Added the entity Cliente.
    -->
    <changeSet id="20201222205621-1" author="jhipster">
        <createTable tableName="cliente" remarks="The Cliente entity.\n@author A true hipster">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="data_nascimento" type="date">
                <constraints nullable="false" />
            </column>
            <column name="cpf" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="fone" type="varchar(16)">
                <constraints nullable="true" />
            </column>
            <column name="celular" type="varchar(16)">
                <constraints nullable="true" />
            </column>
            <column name="logradouro" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="numero" type="varchar(6)">
                <constraints nullable="false" />
            </column>
            <column name="complemento" type="varchar(30)">
                <constraints nullable="true" />
            </column>
            <column name="bairro" type="varchar(50)">
                <constraints nullable="true" />
            </column>
            <column name="cidade" type="varchar(50)">
                <constraints nullable="true" />
            </column>
            <column name="cep" type="varchar(8)">
                <constraints nullable="false" />
            </column>
            <column name="uf" type="varchar(2)">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

